<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/aboutMainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".AboutActitity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp"
            android:gravity="center">

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:src="@drawable/developerone"
                app:civ_border_width="2dp"
                android:layout_marginVertical="20dp"
                app:civ_border_color="#FF000000"/>



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="About The Developer"/>



            <TextView
                android:id="@+id/developer_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="30dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:text="@string/about_dev"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="My Journey"/>

            <TextView
                android:id="@+id/developer_journey"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/dev_journey"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="Vision"/>


            <TextView
                android:id="@+id/dev_vision"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="30dp"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:textSize="15sp"
                android:text="@string/dev_vision"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="22sp"
                android:text="Contact With Me"/>


            <TextView
                android:id="@+id/dev_contact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineHeight="30dp"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:textStyle="italic"
                android:paddingBottom="20dp"
                android:text="@string/dev_contact"
                android:textAppearance="?attr/textAppearanceBody1"
                android:layout_marginBottom="16dp"
                android:textColor="@color/black" />









        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
